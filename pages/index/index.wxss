/**index.wxss**/
.wrap {
  width: 100%;
}
.image_wrap {
  border: 1rpx dashed #ffcc00;
  padding: 10rpx;
  width: 90%;
  border-radius: 10rpx;
  position: relative;
  margin: 0 auto;
  text-align: center;
}
.image_wrap button {
  position: absolute;
  top: 10px;
  right: 10px;
  opacity: 0.4;
}
.image_wrap button:hover {
  opacity: 1;
}
#upload {
  outline: none;
  border: 5rpx dashed #ff6600;
  padding: 100rpx 0;
  width: 90%;
  background: #ffffe4;
  white-space: nowrap;
}
.number_wrap {
  display: flex;
  width: 100%;
  height: 100rpx;
  margin: 50rpx 0;
  text-align: center;
}
#number {
  border: 1rpx solid #ddd;
  padding: 25rpx 0;
  vertical-align: middle;
  width: 80%;
  text-align: center;
  border-radius: 10rpx;
  margin: 0 auto;
  font-size: 40rpx;
}
.placeholder {
  font-size: 80%;
}